{
	"name": "@enuesaa/kakkofn",
	"private": true,
	"type": "module",
	"license": "MIT",
	"version": "0.0.9",
	"scripts": {
		"dev": "rm -rf .svelte-kit && svelte-kit sync && vite dev --port 3000",
		"build": "vite build",
		"postbuild": "svelte-sitemap --domain https://kakkofn.dev --out-dir dist",
		"format": "prettier --write src",
		"test": "vitest run"
	},
	"devDependencies": {
		"@melt-ui/pp": "^0.3.2",
		"@melt-ui/svelte": "^0.86.2",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.1",
		"@sveltejs/vite-plugin-svelte": "5.0.3",
		"@types/node": "^22.13.0",
		"@vitest/coverage-v8": "^3.0.4",
		"autoprefixer": "^10.4.20",
		"postcss": "^8.5.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "5.19.6",
		"svelte-sitemap": "^2.7.0",
		"tailwindcss": "^4.0.3",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vite": "^6.0.11",
		"vitest": "^3.0.4"
	},
	"dependencies": {
		"buffer": "^6.0.3",
		"lucide-svelte": "^0.474.0"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 2,
		"semi": false,
		"singleQuote": true,
		"endOfLine": "lf",
		"trailingComma": "es5",
		"plugins": [
			"prettier-plugin-svelte"
		],
		"useTabs": true,
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	}
}
