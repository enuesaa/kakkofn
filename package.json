{
	"name": "@enuesaa/kakkofn",
	"private": true,
	"type": "module",
	"license": "MIT",
	"version": "0.0.9",
	"scripts": {
		"sync": "rm -rf .svelte-kit && NODE_ENV=development svelte-kit sync",
		"dev": "pnpm sync && vite dev --port 3000",
		"build": "pnpm sync && vite build",
		"postbuild": "svelte-sitemap --domain https://kakkofn.dev --out-dir dist",
		"format": "prettier --write src",
		"test": "pnpm sync && vitest run"
	},
	"devDependencies": {
		"@melt-ui/pp": "^0.3.2",
		"@melt-ui/svelte": "^0.86.6",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.37.0",
		"@sveltejs/vite-plugin-svelte": "6.1.3",
		"@tailwindcss/postcss": "^4.1.12",
		"@types/node": "^24.3.0",
		"@vitest/coverage-v8": "^3.2.4",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "5.38.6",
		"svelte-sitemap": "^2.7.1",
		"tailwindcss": "^4.1.12",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vite": "^7.1.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"buffer": "^6.0.3",
		"lucide-svelte": "^0.542.0"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 2,
		"semi": false,
		"singleQuote": true,
		"endOfLine": "lf",
		"trailingComma": "es5",
		"plugins": [
			"prettier-plugin-svelte"
		],
		"useTabs": true,
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	}
}
